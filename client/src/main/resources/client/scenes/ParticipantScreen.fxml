<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="452.0" stylesheets="@../../stylesheets/main.css, @/stylesheets/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.ParticipantScreenCtrl">
   <children>
      <Label fx:id="title" layoutX="110.0" layoutY="30.0" styleClass="h1" text="Add/Edit Participant">
      <font>
         <Font size="25.0" />
      </font></Label>
      <Label fx:id="name" layoutX="110.0" layoutY="75.0" styleClass="h2" text="Name" />
      <TextField fx:id="nameField" layoutX="209.0" layoutY="75.0" promptText="add name" styleClass="small-text" />
      <Label fx:id="email" layoutX="110.0" layoutY="120.0" styleClass="h2" text="Email" />
      <TextField fx:id="emailField" layoutX="209.0" layoutY="120.0" promptText="add email" styleClass="small-text" />
      <Label fx:id="bankDetails" layoutX="110.0" layoutY="157.0" styleClass="h2" text="Bank Details (Optional)" />
      <Label fx:id="holder" layoutX="110.0" layoutY="190.0" styleClass="h2" text="Holder" />
      <TextField fx:id="holderField" layoutX="209.0" layoutY="190.0" promptText="add account holder" styleClass="small-text" />
      <Label fx:id="iban" layoutX="110.0" layoutY="235.0" styleClass="h2" text="IBAN" />
      <TextField fx:id="ibanField" layoutX="209.0" layoutY="235.0" promptText="add IBAN" styleClass="small-text" />
      <Label fx:id="bic" layoutX="110.0" layoutY="280.0" styleClass="h2" text="BIC" />
      <TextField fx:id="bicField" layoutX="209.0" layoutY="280.0" promptText="add BIC" styleClass="small-text" />
      <Button fx:id="okButton" layoutX="252.0" layoutY="330.0" mnemonicParsing="false" onAction="#confirmEdit" prefHeight="30.0" prefWidth="87.0" text="OK">
         <styleClass>
            <String fx:value="positiveButton" />
            <String fx:value="small-text" />
         </styleClass></Button>
      <Button fx:id="cancelButton" layoutX="150.0" layoutY="330.0" mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" prefWidth="87.0" text="Cancel">
         <styleClass>
            <String fx:value="negativeButton" />
            <String fx:value="small-text" />
         </styleClass></Button>
   </children>
</AnchorPane>
